{
  "compilerOptions": {
    "outDir": "./dist/js/",
    "rootDir": "./src",
    "incremental": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}

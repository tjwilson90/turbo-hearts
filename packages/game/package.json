{
  "name": "turbo-hearts-fe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "install": "node install-esbuild.js",
    "clean": "rm -rf ../../assets/game && rm -rf dist/js",
    "start": "run-s build watch",
    "build": "mkdir -p ../../assets/game && mkdir -p dist/js/ && run-p build:*",
    "build-prod": "mkdir -p ../../assets/game && mkdir -p dist/js/ && run-p build:*",
    "build:html": "cp src/index.html ../../assets/game/index.html",
    "build:js": "if [[ ${NODE_ENV} == \"production\" ]]; then run-s build:js-prod:*; else run-s build:js-dev:*; fi",
    "build:js-dev:compile": "sucrase -q src/ -d dist/js/ --transforms typescript,imports,jsx",
    "build:js-dev:bundle": "esbuild dist/js/index.js --bundle '--define:process.env.NODE_ENV=\"development\"' --minify --outfile=../../assets/game/index.js",
    "build:js-prod:compile": "tsc -p .",
    "build:js-prod:bundle": "esbuild dist/js/index.js --bundle '--define:process.env.NODE_ENV=\"production\"' --minify --outfile=../../assets/game/index.js",
    "build:sass": "run-p build:sass:*",
    "build:sass:compile": "sass src/styles/style.scss ../../assets/game/index.css",
    "build:sass:autoprefixer": "postcss ../../assets/game/index.css --use autoprefixer -o ../../assets/game/index.css",
    "watch": "run-p watch:*",
    "watch:js": "chokidar 'src/**/*.ts*' -c 'run-s build:js && echo \"[build:js ✓\"]'",
    "watch:sass": "chokidar 'src/styles/**/*.scss' -c 'run-s build:sass && echo \"[build:sass ✓\"]'"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/cookie": "^0.3.3",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/tween.js": "^17.2.0",
    "autoprefixer": "^9.7.4",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "sass": "^1.26.2",
    "sucrase": "^3.12.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^18.5.0",
    "classnames": "^2.2.6",
    "cookie": "^0.4.0",
    "eventemitter3": "^4.0.0",
    "normalize.css": "^8.0.1",
    "pixi-filters": "^3.0.3",
    "pixi.js": "^5.2.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "redoodle": "2.3.2",
    "redux": "^4.0.5"
  },
  "prettier": {
    "printWidth": 120
  }
}

{
  "name": "turbo-hearts-fe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf ../../assets/game && rm -rf dist/js",
    "start": "run-s build watch",
    "build": "mkdir -p ../../assets/game && run-p build:*",
    "build:html": "cp src/index.html ../../assets/game/index.html",
    "build:js": "run-s build:js:*",
    "build:js:compile": "sucrase src/ -d dist/js/ --transforms typescript,imports",
    "build:js:bundle": "px dist/js/index.js ../../assets/game/index.js",
    "build:sass": "run-p build:sass:*",
    "build:sass:compile": "sass src/styles/style.scss ../../assets/game/index.css",
    "build:sass:autoprefixer": "postcss ../../assets/game/index.css --use autoprefixer -o ../../assets/game/index.css",
    "watch": "run-p watch:*",
    "watch:js": "chokidar 'src/**/*.ts' -c 'npm run build:js'",
    "watch:sass": "chokidar 'src/styles/**/*.scss' -c 'npm run build:sass'"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/cookie": "^0.3.3",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/tween.js": "^17.2.0",
    "autoprefixer": "^9.7.4",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "sass": "^1.26.2",
    "sucrase": "^3.12.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^18.5.0",
    "classnames": "^2.2.6",
    "cookie": "^0.4.0",
    "eventemitter3": "^4.0.0",
    "normalize.css": "^8.0.1",
    "pixi-filters": "^3.0.3",
    "pixi.js": "^5.2.1"
  },
  "prettier": {
    "printWidth": 120
  }
}
